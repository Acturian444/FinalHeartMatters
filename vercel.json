{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/create-checkout-session",
      "dest": "/server.js"
    },
    {
      "src": "/api/verify-checkout",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "redirects": [
    {
      "source": "/letitout",
      "destination": "/letitout.html"
    },
    {
      "source": "/info",
      "destination": "/info.html"
    }
  ]
} 