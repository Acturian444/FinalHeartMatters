{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/create-checkout-session",
      "destination": "/server.js"
    },
    {
      "source": "/api/verify-checkout",
      "destination": "/server.js"
    }
  ],
  "redirects": [
    {
      "source": "/letitout",
      "destination": "/letitout.html",
      "permanent": true
    },
    {
      "source": "/info",
      "destination": "/info.html",
      "permanent": true
    },
    {
      "source": "/letitout/",
      "destination": "/letitout.html",
      "permanent": true
    },
    {
      "source": "/info/",
      "destination": "/info.html",
      "permanent": true
    }
  ]
} 